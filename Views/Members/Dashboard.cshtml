@model GymApp.ViewModels.MemberDashboardViewModel
@{
    ViewData["Title"] = "Members Dashboard";
}

<h1>Member Dashboard</h1>

<div class="container">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#details">Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#healthMetrics">Health Metrics</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#sessions">Session Bookings</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#classes">Class Bookings</a>
        </li>
    </ul>

    <div class="tab-content">
        <div id="details" class="tab-pane fade show active">
            @Html.Partial("_MemberDetails", Model.MemberInfo)
        </div>
        <div id="healthMetrics" class="tab-pane fade">
             @Html.Partial("_HealthMetrics", Model.HealthMetrics) 
        </div>
        <div id="sessions" class="tab-pane fade">
   @*          @Html.Partial("_Sessions", Model.SessionBookings) *@
        </div>
        <div id="classes" class="tab-pane fade">
@*             @Html.Partial("_Classes", Model.ClassBookings) *@
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.5.3/js/bootstrap.min.js"></script>
}


