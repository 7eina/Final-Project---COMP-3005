@model GymApp.Models.HealthMetric

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>HealthMetric</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="HeartRate" class="control-label"></label>
                <input asp-for="HeartRate" class="form-control" />
                <span asp-validation-for="HeartRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodPressUp" class="control-label"></label>
                <input asp-for="BloodPressUp" class="form-control" />
                <span asp-validation-for="BloodPressUp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodPressDown" class="control-label"></label>
                <input asp-for="BloodPressDown" class="form-control" />
                <span asp-validation-for="BloodPressDown" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CholesterolLevel" class="control-label"></label>
                <input asp-for="CholesterolLevel" class="form-control" />
                <span asp-validation-for="CholesterolLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeightKg" class="control-label"></label>
                <input asp-for="WeightKg" class="form-control" />
                <span asp-validation-for="WeightKg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberId" class="control-label"></label>
                <select asp-for="MemberId" class="form-control" asp-items="ViewBag.MemberId"></select>
                <span asp-validation-for="MemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Members" asp-action="Dashboard" asp-route-id="@Model?.Member.Id">Back to Dashboard</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
